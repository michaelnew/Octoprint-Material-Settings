<form class="form-horizontal">
    <h1>{{ _('Material Settings') }}</h1>

    <div class="control-group" title="{{ _('This value will override any bed temperature command (M190 and M140) sent to the printer') }}">
        <label class="control-label">{{ _('Bed Temperature') }}</label>
        <div class="controls">
            <div class="input-append">
                <input type="number" step="any" min="0" class="input-mini text-right" data-bind="value: bedTemp"> 
                <span class="add-on">째C</span>
            </div>
        </div>
    </div>

    <div class="control-group" title="{{ _('This value will override any bed temperature command (M190 and M140) sent to the printer') }}">
        <label class="control-label">{{ _('First Layer Bed Temperature') }}</label>
        <div class="controls">
            <div class="input-append">
                <input type="number" step="any" min="0" class="input-mini text-right" data-bind="value: bedTempFirstLayer"> 
                <span class="add-on">째C</span>
            </div>
        </div>
    </div>

    <div class="control-group" title="{{ _('This value will override any print temperature command (M190 and M140) sent to the printer') }}">
        <label class="control-label">{{ _('Print Temperature') }}</label>
        <div class="controls">
            <div class="input-append">
                <input type="number" step="any" min="0" class="input-mini text-right" data-bind="value: printTemp">
                <span class="add-on">째C</span>
            </div>
        </div>
    </div>

    <div class="control-group" title="{{ _('This value will override any print temperature command (M190 and M140) sent to the printer') }}">
        <label class="control-label">{{ _('First Layer Print Temperature') }}</label>
        <div class="controls">
            <div class="input-append">
                <input type="number" step="any" min="0" class="input-mini text-right" data-bind="value: printTempFirstLayer">
                <span class="add-on">째C</span>
            </div>
        </div>
    </div>

    <div>
        <button class="btn" data-bind="click: updateMaterial">{{ _('Update') }}</button>
        <!-- <button class="btn" data-bind="click: runTest">{{ _('TEST') }}</button> -->
    </div>
</form>